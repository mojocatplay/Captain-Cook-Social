package baseobject{	import flash.display.DisplayObject;	import flash.display.Sprite;		public class GUI extends Sprite	{		private var container:Sprite;		public function GUI()		{			addChild(container = new Sprite());		}			public function addNewChild(dObj:DisplayObject, coords:Object):void		{			dObj.x = -(coords.x>>1);			dObj.y = -(coords.y>>1);			container.addChild(dObj);			//updateRegPoint();		}			private function updateRegPoint():void		{			container.x = -container.width>>1;			container.y = -container.width>>1;		}	}}